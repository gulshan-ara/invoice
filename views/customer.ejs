<!DOCTYPE html>
<html>

<head>
    <title>Customers</title>
    <style>
        .header{
            text-align: center;
            font-size: 20px;
        }

        table{
            border-collapse: collapse;
            border: 1px solid black;
            margin: auto 20%;
            width: 60%;
        }

        th, td{
            border: 1px solid black;
            padding: 15px;
            width: 25%;
            text-align: center;
        }

        .add-customer{
            margin: 2% 25%;
            padding: 0 5%;
        }

        .form-field{
            font-size: 15px;
            padding: 5px;
            text-align: center;
            margin: 2%;
        }
    </style>
</head>

<body>
    <section class="header">
        <h1>Customers</h1>
    </section>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Contact No</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            <% print.forEach(function(result) { %>
                <tr>
                <td><%= result.loginId %></td>
                <td><%= result.name %></td>
                <td><%= result.phone %></td>
                <td> <a href="/update?id=<%= result.loginId %>">EDIT</a> <a href="/delete?id=<%= result.loginId %>">DELETE</a> </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <form action="/save" method="post" class="add-customer">
        <input type="text" name="name" placeholder="Enter Name" class="form-field">
        <input type="text" name="contact" placeholder="Contact Number" class="form-field">
        <button class="form-field">Add Customer</button>
    </form>
</body>

</html>